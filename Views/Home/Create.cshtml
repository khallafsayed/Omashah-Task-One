@model Omashah_Task_One.Models.Item

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card CreateClass">
    <div class="card-header">
        <h1>Add New Item</h1>
    </div>
    <div class="card-body">
         
            
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="form-group row ">
                        <label asp-for="Name" class="control-label col-md-3"></label>
                        <div class="col-md-7">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <div class="form-group row">
                        <label asp-for="Link" class="control-label col-md-3"></label>
                        <div class="col-md-7">
                            <input asp-for="Link" class="form-control" />
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                    </div>
            
           
                    <div class="form-group row">
                        <label asp-for="Published_Date_From" class="control-label col-md-3"></label>
                <div class="col-md-7">
                        <input asp-for="Published_Date_From" class="form-control" />
                        <span asp-validation-for="Published_Date_From" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Published_Date_To" class="control-label col-md-3"></label>
                <div class="col-md-7">
                        <input asp-for="Published_Date_To" class="form-control" />
                        <span asp-validation-for="Published_Date_To" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                <div class="col-md-7">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            
         

    </div>
    <div class="card-footer">
        <div>
            <a class="btn btn-danger" asp-action="Index">Back to Home</a>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
