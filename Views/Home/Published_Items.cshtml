@model IEnumerable<Omashah_Task_One.Models.Item>

@{
    ViewData["Title"] = "Published_Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" card">
    <div class="card-header">
        <h1>Published Items</h1>
    </div>
    <div class="card-body" >
        <table class="table" id="dataTable">
        <thead>
            <tr class="bg-dark text-white">
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Published_Date_From)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Published_Date_To)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                            <a class="btn btn-primary" target="_blank" href="https://@item.Link">Link</a>
                    </td>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Published_Date_From)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Published_Date_To)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>

